body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

.container {
        width: 500px;
        clear: both;
    }

.container input {
        width: 100%;
        clear: both;
    }

label {
    display: inline-block;
    width:50px;
    text-align: right;
}

input {
    width: 300px;
    margin: 10px 10px 10px 20px;
    padding: 10px 0px 0px 10px;
}

input[type="submit"] {
    background-color: #b3b3b3;
    color: #fff;
    font-size: 16px;
    margin: 10px 10px 10px 10px;
    padding: 5px;
    border-radius: 5%;
    width:120px;
    text-align: center;
}